/* pages/buy/index.wxss */
.buy{
  font-size: 36rpx;
}
.buy_header{
  display: flex;
  flex-direction: column;
  position: fixed;
  top:0;
  z-index: 999;
  background-color: #FF7F50;
  width: 100%;
  height: 4rem;
}
.search_box{
  display: flex;
  height: 2rem;
  justify-content: center;
  align-items: center;
}
.search_input {
  padding-left: 0.5rem;
}
.search_form{
  width: 96vw;
  border-radius: 1rem;
  background-color: #fff;
}


.buy_middle{
  width: 100%;
  height: 2rem;
  line-height: 2rem;
  background-color: #fff;
  border-bottom: 1px solid #FF7F50;
}
.sort-wrap{
  display: flex;
  justify-content: space-between;
  width: 60vw;
  background-color:#fff;
  /* line-height: 100%; */
}
.sort-btn{
  width:20vw;
  display: flex;
  justify-content: center;
  /* text-align: center; */
  height: 2rem;
  line-height: 2rem;
  font-size: 0.8rem;
  color:#333;
  background-color: #fff;
}
.sort-btn image{
  display: inline-block;
  width: 1rem;
  height: 1rem;
  margin-top: 0.5rem;
}


.clear{
  clear: both;
  overflow: hidden;
}
navigator{
  display:inline;
}
.list{
  margin-top:4rem;
}
 
.list .list_item{
  /* margin-top:10px; */
  padding:10px;
  height:180rpx;
  border-bottom:1px solid #E8E8E8;
}
.list .list_item .img{
  float:left;
  width:40%;
  height:100%;
}
.list .list_item .img image{
   width:100%;
   height:100%;
}
 
.list .list_item .info{
  width:59%;
  float:right;
  height:180rpx;
  position:relative;
  font-size:28rpx;
}
.list .list_item .info .title{
  color:#333;
  margin-left:10px;
  font-size: 32rpx;
}
 
.list .list_item .info .price{
  color:#333;
  /* margin-left:10px; */
  /* margin-top:10px; */
  
}
.list .list_item .info .address{
  color:#333;
  margin-left:10px;
  margin-top:10px;
  /* font-size:15px; */
}
 
.list .list_item .info .num{
  
  color:#333;
  margin-left:10px;
  /* margin-right: 10px; */
  margin-top: 10px;
}