.classify{
  font-size: 30rpx;
}
.menu-left{
  display: flex;
  flex-direction: column;
  width: 90vw;
  margin: 0 auto;
  height: 92vh;
  overflow: scroll;
}
.classify-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 100px;
  line-height: 100px;
  border-bottom: 1px solid #FF7F50;
}
.info{
  height: 100px;
  line-height: 100px;
}
.info view{
  height: 25px;
  line-height: 25px;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2;
}
.option{
  width: 15vw;
  display: flex;
  flex-direction: column;
  align-items: space-between;
  height: 70px;
  margin-top: 15px;
  color: white;
}
.butt{
  width: 15vw;
  height: 30px;
  line-height: 30px;
  box-sizing: border-box;
  border-radius: 5px;
  text-align: center;
  background-color: #FF7F50;
}
.footer{
  display: fixed;
  bottom: 0;
  background-color: #FF7F50;
  border-radius: 40rpx;
  color: white;
  height: 8vh;
  line-height: 8vh;
  text-align: center;
}