.weui-tabbar{
  height: 60rpx;
  background-color: #FF7F50;
}
.weui-tabbar__item{
  height: 60rpx;
}
.weui-tabbar__label{
  font-size: 36rpx;
}
/* 新增 */
.tab{
  float: left; 
  width: 33.3333%;
  text-align: center;
  padding: 10rpx 0; 
}
.topTabSwiper{
  border-top: 1px solid #ccc; 
  border-bottom: 1px solid #ccc; 
  zoom: 1;
}
.topTabSwiper:after{
  content: ""; 
  clear: both;
  display: block;
}
.tabBorer{
  border-bottom: 1px solid #f00; 
  color: #f00;
}
.swiper{
  width: 100%;
  overflow: scroll;
}
.swiper_con{
  /* text-align: center;  */
  width: 100%; 
  height: 100%; 
}